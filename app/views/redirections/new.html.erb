<style>
.margin {
    margin-top:10px;
}
.well
{       
    position:absolute;      
    top: 30%;
    margin-top:-100px; /* negative number 1/2 height */
    outline:1px solid #CCC;
}
</style>
    <div class="col-md-6 col-md-offset-3 well">
        <%= form_for (Redirection.new) do |f| %>
            <div class="form-group margin">
                <h4 class="control-labeli col-sm-offset-3 col-sm-8"><strong>Add configuration for a new country<strong></h4>
            </div>
            <div class="form-group margin">
                    <div class="col-sm-3">
                        <%= f.label "Select a Country: ", class:"control-label" %>
                    </div>
                    <div class="col-sm-9">
                        <%= country_select("redirection", "country",{},{class:"form-control"}) %> 
                    </div>
            </div>
            <div class="form-group margin">
                    <div class="col-sm-3">
                    <%= f.label "Redirect To: ", class:"control-label" %>
                    </div>
                    <div class="col-sm-9">
                        <%=f.url_field(:hyperlink,{class:"form-control"})%>
                    </div>
            </div>
            <div class="form-group margin">
                <div class="col-sm-offset-8 col-sm-4">
                    <%= f.submit class:' btn btn-success pull-right' do %>
                        <i class="icon-up-arrow icon-white"></i>
                    <%end %>
                </div>
            </div>
        <% end %>
    </div>
